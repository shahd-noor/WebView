<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebView.WebViewPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Entry Placeholder="Weblink"
                   x:Name="WebLink"/>
            <Button x:Name="Add"
                    Text="Add"
                    Background="skyBlue"
                    TextColor="White"
                    CornerRadius="15"
                    Clicked="Add_Clicked"
                
                />
            <ScrollView>
                <WebView x:Name="BrowserLink"/>
            </ScrollView>
           
        </StackLayout>
       
    </ContentPage.Content>
</ContentPage>